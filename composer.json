{
  "name": "oblak/class-validator",
  "description": "Decorator-based property validation for classes.",
  "license": "MIT",
  "type": "library",
  "authors": [
    {
      "name": "Sibin Grasic",
      "email": "sibin.grasic@oblak.studio"
    }
  ],
  "require": {
    "php": ">= 8.1"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.5",
    "squizlabs/php_codesniffer": "^3.9"
  },
  "suggest": {
    "oblak/class-transformer": "Provides a way to transform the classes and objects"
  },
  "autoload": {
    "psr-4": {
      "Oblak\\ClassValidator\\": "src/"
    },
    "files": [
      "src/oblak-class-validator.php",
      "src/Validator/number-validators.php",
      "src/Validator/string-type-validators.php",
      "src/Validator/string-validators.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Oblak\\ClassValidator\\Tests\\": "test/Fixtures/"
    }
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "ergebnis/composer-normalize": true
    },
    "classmap-authoritative": true,
    "optimize-autoloader": true,
    "sort-packages": true
  }
}
